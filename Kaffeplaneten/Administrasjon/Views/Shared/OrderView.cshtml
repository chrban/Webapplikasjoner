@model Kaffeplaneten.Models.OrderModel


@{
    ViewBag.Title = "orderView";
}
            <div class="panel panel-default">
                <div class="panel-heading">@Html.Label("Ordrenummer: #")@Model.orderNr - @Html.Label("Bestillt av kunde: #") @Model.customerID </div>
                <table class="table table-hover table-striped">
                    <tr>
                        <th>
                           @Html.Label("Produktavn: ")
                        </th>
                        <th>
                            @Html.Label("Kategori: ")
                        </th>
                        <th>
                            @Html.Label("Pris: ")
                            
                        </th>
                        <th>
                            @Html.Label("Antall: ")
                        </th>
                        <th>
                            @Html.Label("Produkt Id: ")
                        </th>

                    </tr>
                @foreach (var o in Model.products)
                {
                    <tr>
                        <th>
                             @Html.DisplayFor(model => o.productName)

                        </th>
                        <th>
                            @Html.DisplayFor(model => o.category)
                        </th>
                        <th>
                             @Html.DisplayFor(model => o.price)
                        </th>
                        <th>
                            @Html.DisplayFor(model => o.quantity)
                        </th>
                        <th>
                            @Html.DisplayFor(model => o.productID)
                           
                        </th>
                    </tr>

                }
                    </table>

                <div class="panel-footer">


                    <p>@Html.Label("TOTAL: "): @Model.total, -</p>


                    <button class="btn btn-danger btn-xs" data-toggle="modal" data-target="#modalDelete-@Model.orderNr">Slett ordre</button>

                </div>

            </div>


<!--DeleteModal-->
<div class="modal fade" id="modalDelete-@Model.orderNr" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Bekreft sletting!</h4>
            </div>
            <div class="modal-body">
                <p>Er du sikker på at du vil slette ordre @Model.orderNr?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-info" data-dismiss="modal">Avbryt</button>
                @Html.ActionLink("Slett", "cancelOrder", "AdminOrder", new { nr = Model.orderNr }, new { @class = "btn btn-danger " })
            </div>
        </div>
    </div>
</div>




