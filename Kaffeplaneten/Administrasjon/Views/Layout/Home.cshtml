@{
    ViewBag.Title = "Home";
}
@Html.Action("HeaderAndMenuBar", "Layout")

<div class="container-fluid">
    <div class="panel-primary">
            <div class="panel-default col-md-offset-3 col-md-6">
                <div class="panel-heading">
                    <h2>Inlogget: <a id="nameAdmin">@(Session["firstname"] + " " + Session["lastname"])</a></h2>
                    <h2>Bruker: <a id="nameAdmin">@(Session["username"])</a></h2>
                </div>
            </div>
        <div style="text-align: center;" class="container panel-body col-md-offset-3 col-md-6">
            <h2>Velkommen til administrasjonssiden for Kaffeplaneten</h2>
            <p >Ut ifra dine rettigheter som ansatt, får du vist det du har behov for.</p>
            <p>Skulle du mangle rettigheter, ta kontakt med administrasjonen.</p>
            <p>Dine rettigheter er: </p>

            @{

                bool employeeAdmin = (bool)Session["employeeAdmin"];
                bool customerAdmin = (bool)Session["customerAdmin"];
                bool orderAdmin = (bool)Session["orderAdmin"];
                bool productAdmin = (bool)Session["productAdmin"];
                bool DatabaseAdmin = (bool)Session["databaseAdmin"];

                if (employeeAdmin)
                {
                    <h3>Rettighet til å endre ansattoplysninger</h3>
                }
                if (customerAdmin)
                {
                    <h3>Rettighet til å endre kundeoplysninger</h3>
                }
                if (orderAdmin)
                {
                    <h3>Rettighet til å endre ordreoplysninger</h3>
                }
                if (productAdmin)
                {
                    <h3>Rettighet til å endre produkter, slette, oppdatere og legge til nye</h3>
                }
                if (DatabaseAdmin)
                {
                    <h3>Rettighet til å lese databaselogg og se over alle endringer som har skjedd av de ulike brukerne</h3>
                }

            }

        </div>

       </div>
     </div>
