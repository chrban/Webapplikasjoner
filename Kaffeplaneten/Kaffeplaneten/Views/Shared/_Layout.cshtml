@using Kaffeplaneten.Models;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>

<body>
        
    <div id="LogOutBox" style="display: none">
        <p style="color:blue">Pålogget</p>
        <input type="button" id="LogOut" text="Logg Ut" onclick="showLogOutBox()" />
        
    </div>
    <div id="LogInBox">
        <p style="color:red">Ikke pålogget</p>
        @Html.ActionLink("Logg inn", "Loginview", "Security")
     </div>
        <div id="innMat">
            </div>
    <ul class="nav nav-tabs">
                <li role="presentation" class="showAlways">@Html.ActionLink("Kaffeplaneten", "AllProducts", "Product", new { area = "" }, new { @class = "navbar-brand" })</li>
                <li role="presentation" class="showLoggedOut"> @Html.ActionLink("Registrer", "createUser", "User", new { area = "" }, new { @class = "navbar-brand" })</li>
                <li role="presentation" class="showAlways"> @Html.ActionLink("Handlekurv", "ShoppingCartView", "ShoppingCart", new { area = "" }, new { @class = "navbar-brand" })</li>
                <li role="presentation" class="showLoggedIn"> @Html.ActionLink("Kontoinstillinger", "accountView", "User", new { area = "" }, new { @class = "navbar-brand" } )</li>
    </ul>
        @RenderBody()
            
            

        </div>

        <footer>
            <p>&copy; @DateTime.Now.Year - Kaffeplaneten</p>
        </footer>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/mustache.js"></script>
    <script src="~/Scripts/products.js"></script>
    <script src="~/Scripts/JavascriptFunksjoner.js"></script>
    
</body>
</html>