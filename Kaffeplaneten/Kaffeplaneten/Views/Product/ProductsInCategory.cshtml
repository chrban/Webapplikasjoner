@model List<Kaffeplaneten.Models.ProductModel>

@foreach (var produkt in Model)
{
    <div class="@Html.DisplayFor(model => produkt.category)">
        <div id="template" class="col-sm-6 col-md-6">
            <div class="thumbnail">
                <img img src="../../Content/img/@Html.DisplayFor(model => produkt.imageURL)" alt="ProductImage" data-toggle="modal" data-target="#myModal" style="width:150px;height:150px">
                <div class="caption">
                    <h3 id="pName">FRA INCAT @Html.DisplayFor(model => produkt.productName)</h3>
                    <h2>@Html.DisplayFor(model => produkt.price)</h2>
                    <p id="pDes">@Html.DisplayFor(model => produkt.description)</p>
                </div>
                <p>@produkt.productID</p>
                @Html.ActionLink("Info", "ProductDetails", "Product", new { id = produkt.productID }, new { @class = "btn btn-default" })
                <button type="button" id="@Html.DisplayFor(model => produkt.productID)" class="btn btn-default" onclick="putInCart(@Html.DisplayFor(model => produkt.productID),1)">Legg i handlekurv <span class="glyphicon glyphicon-shopping-cart"></span></button>

            </div>
        </div>
    </div>
}

