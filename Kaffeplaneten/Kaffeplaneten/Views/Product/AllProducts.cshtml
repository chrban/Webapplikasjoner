@model List<Kaffeplaneten.Models.ProductModel>

@{
    ViewBag.Title = "Products";

}
@Html.Action("HeaderAndMenuBar", "Layout")
<div class="jumbotron">
    <div class="container">
        <img class="img-responsive" src="../../Content/img/logo.png" />
    </div>
</div>

<script src="~/Scripts/products.js"></script>
<div id="categoryCanvas">Her kommer kategorier!</div>
<div id="productCanvas">Ingen produkter å vise! Finnes det produkter i databasen??</div>


<script type="text/javascript">
    $(window).load(function () {
        var all = "INITIAL";
        $.ajax({
            url: "/Product/ProductsInCategory", data: {
                category: all
            }, success: function (retur) {
                $("#productCanvas").empty();
                $("#productCanvas").html(retur);
            }
        });
    });

        
</script>

    <script type="text/javascript">
        $(window).load(function () {
            $("#categoryCanvas").load("@Url.Content("/Product/ProductCategories")");
            $("#categoryCanvas").show();

        });

    </script>
