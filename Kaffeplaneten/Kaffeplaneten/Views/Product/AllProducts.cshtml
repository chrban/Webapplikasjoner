@model List<Kaffeplaneten.Models.ProductModel>

@{
    ViewBag.Title = "Products";

}
@Html.Action("HeaderAndMenuBar", "Layout")
<script src="~/Scripts/products.js"></script>

<div id="categoryCanvas">Her kommer kategorier!</div>
<div id="productCanvas">Her kommer produktene!
    @foreach (var produkt in Model)
    {
        <div class="@Html.DisplayFor(model => produkt.category)">
            <div id="template" class="col-sm-6 col-md-6">
                <div class="thumbnail">
                    <img img src="../../Content/img/@Html.DisplayFor(model => produkt.imageURL)" alt="ProductImage" data-toggle="modal" data-target="#myModal" style="width:150px;height:150px">
                    <div class="caption">
                        <h3 id="pName">@Html.DisplayFor(model => produkt.productName)</h3>
                        <h2>@Html.DisplayFor(model => produkt.price)</h2>
                        <p id="pDes">@Html.DisplayFor(model => produkt.description)</p>
                    </div>
                    <p>@produkt.category</p>
                    @Html.ActionLink("Info", "ProductDetails", "Product", new { id = produkt.productID }, null)
                </div>
            </div>
        </div>
    }
    </div>


    <script type="text/javascript">
        $(window).load(function () {
            $("#categoryCanvas").load("@Url.Content("/Product/ProductCategories")");
            $("#categoryCanvas").show();
        });

    </script>
